<Window x:Class="MyFinControl.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MyFinControl"
        Title="MyFinControl"
        WindowState="Maximized"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFF3F4F6">

    <Window.Resources>

        <!-- КОЛЬОРИ -->
        <Color x:Key="ColorBackground">#FFF3F4F6</Color>
        <Color x:Key="ColorCard">#FFFFFFFF</Color>
        <Color x:Key="ColorBorder">#FFE5E7EB</Color>
        <Color x:Key="ColorTextPrimary">Black</Color>
        <Color x:Key="ColorTextSecondary">#FF374151</Color>
        <Color x:Key="ColorAccent">LightSlateGray</Color>
        <Color x:Key="ColorPositive">Green</Color>
        <Color x:Key="ColorNegative">#FFEF4444</Color>

        <SolidColorBrush x:Key="BrushBackground" Color="{StaticResource ColorBackground}" />
        <SolidColorBrush x:Key="BrushCard" Color="{StaticResource ColorCard}" />
        <SolidColorBrush x:Key="BrushBorder" Color="{StaticResource ColorBorder}" />
        <SolidColorBrush x:Key="BrushTextPrimary" Color="{StaticResource ColorTextPrimary}" />
        <SolidColorBrush x:Key="BrushTextSecondary" Color="{StaticResource ColorTextSecondary}" />
        <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource ColorAccent}" />
        <SolidColorBrush x:Key="BrushPositive" Color="{StaticResource ColorPositive}" />
        <SolidColorBrush x:Key="BrushNegative" Color="{StaticResource ColorNegative}" />

        <!-- ТЕКСТ -->
        <Style x:Key="BaseTextBlock" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}" />
            <Setter Property="TextWrapping" Value="NoWrap" />
        </Style>

        <Style x:Key="SectionTitleText" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <Style x:Key="SecondaryText" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlock}">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{StaticResource BrushTextSecondary}" />
        </Style>

        <Style x:Key="NonResizableHeader" TargetType="GridViewColumnHeader">
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>

        <!-- КАРТКА -->
        <Style x:Key="CardContainer" TargetType="Border">
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Background" Value="{StaticResource BrushCard}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,6,12,25" />
            <Setter Property="Margin" Value="0,0,16,16" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="0" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ЛЕГКА КНОПКА -->
        <Style x:Key="GhostIconButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Foreground" Value="{StaticResource BrushTextSecondary}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE5E7EB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ОСНОВНА КНОПКА -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource BrushAccent}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushAccent}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Margin" Value="16,0,0,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Вигляд для кружків категорій -->
        <Style x:Key="CategoryCircleButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Background="{StaticResource BrushBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- ВЕРХНЯ ПАНЕЛЬ -->
        <Border Grid.Row="0"
                Background="{StaticResource BrushBackground}"
                Padding="21,2"
                BorderBrush="{StaticResource BrushBorder}"
                BorderThickness="0,0,0,1"
                Margin="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Style="{StaticResource BaseTextBlock}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Text="Особисті фінанси" />
                    <TextBlock Style="{StaticResource SecondaryText}"
                               Text="Автоматизована система обліку" />
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button Style="{StaticResource GhostIconButton}"
                            Content="Статистика"
                            Click="Statistics_Click" FontWeight="Bold" FontSize="14" />
                    <Button Style="{StaticResource GhostIconButton}"
                            Content="Налаштування"
                            Click="Settings_Click" FontWeight="Bold" FontSize="14" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- ОСНОВНИЙ КОНТЕНТ -->
        <Grid Grid.Row="1" Margin="15,4,15,2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ВЕРХНІ КАРТКИ -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Баланс -->
                <Border Grid.Column="0"
                        Style="{StaticResource CardContainer}" Padding="16,6,16,12" Margin="0,0,16,15">
                    <!-- Весь ряд по центру картки -->
                    <Grid HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 1. Поточний баланс -->
                        <StackPanel Grid.Column="0"
                                    Margin="0,0,24,0"
                                    VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource SecondaryText}"
                                       Text="Поточний баланс"/>
                            <TextBlock x:Name="CurrentBalanceText"
                                       Style="{StaticResource BaseTextBlock}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Text="UAH 0.00"/>
                        </StackPanel>

                        <!-- ВЕРТИКАЛЬНИЙ РОЗДІЛЬНИК -->
                        <Border Grid.Column="1"
                                Width="1"
                                Height="42"
                                Margin="12,0,24,0"
                                Background="{StaticResource BrushBorder}"
                                VerticalAlignment="Center"/>

                        <!-- 2. Валюта -->
                        <StackPanel Grid.Column="2"
                                    Margin="0,0,32,0"
                                    VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource SecondaryText}"
                                       Text="Валюта:"
                                       Margin="0,0,0,4" FontSize="16"/>
                            <ComboBox x:Name="CurrencyComboBox"
                                      Width="100"
                                      SelectionChanged="CurrencyComboBox_SelectionChanged">
                                <ComboBoxItem Content="UAH" IsSelected="True"/>
                                <ComboBoxItem Content="USD"/>
                                <ComboBoxItem Content="EUR"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- 3. Доходи -->
                        <StackPanel Grid.Column="3"
                                    Margin="0,0,40,0"
                                    VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource SecondaryText}"
                                       Text="Доходи за місяць"
                                       FontSize="16"
                                       TextAlignment="Center"/>
                            <TextBlock x:Name="MonthIncomeText"
                                       Style="{StaticResource BaseTextBlock}"
                                       Foreground="{StaticResource BrushPositive}"
                                       FontWeight="SemiBold"
                                       Text="+ 0.00"
                                       FontSize="20"
                                       TextAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- 4. Витрати -->
                        <StackPanel Grid.Column="4"
                                    VerticalAlignment="Center">
                            <TextBlock Style="{StaticResource SecondaryText}"
                                       Text="Витрати за місяць"
                                       FontSize="16"
                                       TextAlignment="Center"/>
                            <TextBlock x:Name="MonthExpenseText"
                                       Style="{StaticResource BaseTextBlock}"
                                       Foreground="{StaticResource BrushNegative}"
                                       FontWeight="SemiBold"
                                       Text="- 0.00"
                                       FontSize="20"
                                       TextAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                    </Grid>
                </Border>

                <!-- Праві картки -->

                <!-- Праві картки -->
                <!-- Права обʼєднана картка -->
                <Border Grid.Column="1"
                        Style="{StaticResource CardContainer}"
                        Padding="16,10,16,12"
                        Margin="0,0,0,15">
                    <StackPanel>

                        <!-- Остання операція -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Style="{StaticResource SecondaryText}"
                                       Text="Остання операція"
                                       FontWeight="Bold"
                                       FontSize="15"
                                       Margin="0,0,0,6"/>

                            <TextBlock x:Name="LastOperationText"
                                       Style="{StaticResource BaseTextBlock}"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,4"
                                       Text="—"
                                       FontStyle="Italic"
                                       FontSize="14"/>

                            <TextBlock x:Name="LastOperationDateText"
                                       Style="{StaticResource SecondaryText}"
                                       Margin="0,0,0,0"
                                       Text="—"
                                       FontStyle="Italic"
                                       FontSize="14"/>
                        </StackPanel>

                        <!-- Роздільник -->
                        <Border Height="1"
                                Margin="0,4,0,8"
                                Background="{StaticResource BrushBorder}"/>

                        <!-- Накопичення (центр всередині карти) -->
                        <StackPanel Margin="0,0,0,8"
                                    HorizontalAlignment="Center">
                            <TextBlock Style="{StaticResource SecondaryText}"
                                       Text="Накопичення"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="0,0,0,4"
                                       TextAlignment="Center"/>

                            <TextBlock x:Name="GoalInfoText"
                                       Style="{StaticResource BaseTextBlock}"
                                       FontSize="15"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Text="Ціль не задана."/>
                        </StackPanel>

                        <!-- Роздільник -->
                        <Border Height="1"
                                Margin="0,4,0,8"
                                Background="{StaticResource BrushBorder}"/>

                        <!-- Кількість операцій за місяць -->
                        <StackPanel>
                            <TextBlock Style="{StaticResource SecondaryText}"
                                       Text="Кількість операцій за місяць"
                                       FontWeight="Bold"
                                       FontSize="15"
                                       Margin="0,0,0,6" HorizontalAlignment="Center"/>

                            <TextBlock x:Name="MonthOperationsCountText"
                                       Style="{StaticResource BaseTextBlock}"
                                       FontWeight="SemiBold"
                                       FontStyle="Italic"
                                       FontSize="18"
                                       Text="0" HorizontalAlignment="Center"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

           






            </Grid>

            <!-- НИЖНІЙ БЛОК: ОПЕРАЦІЇ + КАТЕГОРІЇ -->
            <Border Grid.Row="1"
        Margin="0,0,0,2"
                    Style="{StaticResource CardContainer}" Grid.RowSpan="2" Padding="0,12,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Верхній рядок -->
                    <Grid Grid.Row="0" Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="369*"/>
                            <ColumnDefinition Width="190*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Операції + кнопки -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Width="360">
                            <TextBlock Style="{StaticResource SectionTitleText}"
                                       VerticalAlignment="Center"
                                       Text="Операції" FontWeight="Bold" FontSize="20" />
                            <Button Style="{StaticResource PrimaryButton}" 
                                    Content="+ Додати операцію"
                                    Click="AddOperation_Click" />
                            <!-- Редагувати операцію -->
                            <Button Style="{StaticResource GhostIconButton}"
                                    Margin="4,0,0,0"
                                    Content="🖋️змінити"
                                    ToolTip="Редагувати операцію"
                                    Click="EditOperation_Click" FontWeight="Bold" />
                            <!-- Видалити операцію -->
                            <Button Style="{StaticResource GhostIconButton}"
                                    Margin="4,0,0,0"
                                    Content="🗑"
                                    ToolTip="Видалити операцію"
                                    Click="DeleteOperation_Click" FontWeight="Bold" />
                        </StackPanel>


                        <!-- Категорії + кнопки -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Width="340">
                            <TextBlock Style="{StaticResource SectionTitleText}"
                                       Text="Категорії" FontWeight="Bold" FontSize="20" />
                            <Button Style="{StaticResource PrimaryButton}"
                                    Margin="8,0,0,0"
                                    Content="+ Додати категорію"
                                    Click="AddCategory_Click" />

                            <!-- Редагувати категорію -->
                            <Button Style="{StaticResource GhostIconButton}"
                                    Margin="4,0,0,0"
                                    Content="✏змінити"
                                    ToolTip="Редагувати категорію"
                                    Click="EditCategory_Click" FontWeight="Bold" />
                            <!-- Видалити категорію -->
                            <Button Style="{StaticResource GhostIconButton}"
                                    Margin="4,0,0,0"
                                    Content="🗑"
                                    ToolTip="Видалити категорію"
                                    Click="DeleteCategory_Click" FontWeight="Bold" />

                        </StackPanel>
                    </Grid>

                    <!-- Нижній рядок -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="737*"/>
                            <ColumnDefinition Width="381*"/>
                        </Grid.ColumnDefinitions>

                        <!-- СПИСОК ОПЕРАЦІЙ -->
                        <ListView x:Name="OperationsListView"
                                  Grid.Column="0"
                                  Margin="0,0,8,0"
                                  ItemsSource="{Binding Operations}"
                                  SelectionChanged="OperationsListView_SelectionChanged"
                                  SizeChanged="OperationsListView_SizeChanged"
                                  FontSize="14"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  BorderThickness="0">
                            <ListView.View>
                                <GridView ColumnHeaderContainerStyle="{StaticResource NonResizableHeader}">
                                    <GridViewColumn Header="Дата" Width="130">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding CreatedAt, StringFormat=\{0:dd.MM.yyyy HH:mm\}}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Категорія" Width="160"
                                                    DisplayMemberBinding="{Binding CategoryName}" />

                                    <GridViewColumn Header="Опис" Width="270"
                                                    DisplayMemberBinding="{Binding Description}" />

                                    <GridViewColumn Header="Сума" Width="110">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Amount, StringFormat={}{0:0.##}}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Валюта" Width="60"
                                                    DisplayMemberBinding="{Binding Currency}" />
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <!-- ПРАВА ПАНЕЛЬ КАТЕГОРІЙ -->
                        <ScrollViewer Grid.Column="1"
                                      VerticalScrollBarVisibility="Auto">
                            <StackPanel>

                                <!-- УСІ -->
                                <Button Style="{StaticResource CategoryCircleButton}"
                                        Margin="0,0,0,12"
                                        Click="CategoryAll_Click">
                                    <StackPanel HorizontalAlignment="Center">
                                        <Border Width="60"
                                                Height="60"
                                                CornerRadius="30"
                                                BorderThickness="2"
                                                BorderBrush="{StaticResource BrushBorder}"
                                                Background="#FFF9FAFB">
                                            <TextBlock Text="★"
                                                       FontSize="22"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center" />
                                        </Border>
                                        <TextBlock Text="Усі"
                                                   Style="{StaticResource SecondaryText}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,4,0,0" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                <!-- ВИТРАТИ -->
                                <TextBlock Text="ВИТРАТИ"
                                           Margin="0,4,0,4"
                                           FontFamily="Segoe UI"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource BrushTextSecondary}"
                                           HorizontalAlignment="Center"/>

                                <ItemsControl ItemsSource="{Binding ExpenseCategories}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <!-- 3 кружки в ряд -->
                                            <UniformGrid Columns="3"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource CategoryCircleButton}"
                                                    Tag="{Binding Id}"
                                                    Click="CategorySummary_Click"
                                                    Margin="10">
                                                <StackPanel Margin="0,0,0,12"
                                                            HorizontalAlignment="Center">
                                                    <Border Width="60"
                                                            Height="60"
                                                            CornerRadius="30"
                                                            BorderThickness="2"
                                                            BorderBrush="#FFFACC15"
                                                            Background="#FFF9FAFB">
                                                        <StackPanel HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Emoji}"
                                                                       FontSize="22"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </Border>

                                                    <TextBlock Text="{Binding Name}"
                                                               Style="{StaticResource SecondaryText}"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,4,0,0"/>

                                                    <TextBlock Text="{Binding TotalAmount, StringFormat=\{0:F2\}}"
                                                               FontFamily="Segoe UI"
                                                               FontSize="12"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource BrushTextPrimary}"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- ПРИБУТКИ -->
                                <TextBlock Text="ПРИБУТКИ"
                                           Margin="0,12,0,4"
                                           FontFamily="Segoe UI"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource BrushTextSecondary}"
                                           HorizontalAlignment="Center"/>

                                <ItemsControl ItemsSource="{Binding IncomeCategories}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <!-- 3 кружки в ряд -->
                                            <UniformGrid Columns="3"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource CategoryCircleButton}"
                                                    Tag="{Binding Id}"
                                                    Click="CategorySummary_Click"
                                                    Margin="10">
                                                <StackPanel Margin="0,0,0,12"
                                                            HorizontalAlignment="Center">
                                                    <Border Width="60"
                                                            Height="60"
                                                            CornerRadius="30"
                                                            BorderThickness="2"
                                                            BorderBrush="#FF0EA5E9"
                                                            Background="#FFF9FAFB">
                                                        <StackPanel HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Emoji}"
                                                                       FontSize="22"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center" />
                                                        </StackPanel>
                                                    </Border>

                                                    <TextBlock Text="{Binding Name}"
                                                               Style="{StaticResource SecondaryText}"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,4,0,0"/>

                                                    <TextBlock Text="{Binding TotalAmount, StringFormat=\{0:F2\}}"
                                                               FontFamily="Segoe UI"
                                                               FontSize="12"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource BrushTextPrimary}"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
