<Window x:Class="MyFinControl.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Категорія"
        Width="340"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Background="#FFF3F4F6">

    <Grid Margin="5,5,5,5">
        <!-- Картка -->
        <Border Background="White"
                CornerRadius="12"
                Padding="15"
                BorderBrush="#E5E7EB"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Назва -->
                    <RowDefinition Height="Auto"/>
                    <!-- Смайлик -->
                    <RowDefinition Height="Auto"/> <!-- Тип -->
                    <RowDefinition Height="Auto"/>
                    <!-- Кнопки -->
                </Grid.RowDefinitions>

                <!-- Назва категорії -->
                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Назва категорії"
                               FontSize="12"
                               Foreground="#6B7280"
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="NameTextBox"
                             MinWidth="220"
                             HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Смайлик -->
                <StackPanel Grid.Row="1" Margin="0,0,0,12">
                    <TextBlock Text="Смайлик (наприклад, 🛜)"
               FontSize="12"
               Foreground="#6B7280"
               Margin="0,0,0,4"/>
                    <TextBox x:Name="EmojiTextBox"
             Width="80"
             HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Тип категорії -->
                <StackPanel Grid.Row="2" Margin="0,0,0,16">
                    <TextBlock Text="Тип категорії"
               FontSize="12"
               Foreground="#6B7280"
               Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="ExpenseRadio"
                     Content="Витрата"
                     Margin="0,0,16,0"
                     IsChecked="True"/>
                        <RadioButton x:Name="IncomeRadio"
                     Content="Дохід"/>
                    </StackPanel>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right">

                    <!-- OK зліва -->
                    <Button Content="OK"
            Background="#2563EB"
            Foreground="White"
            BorderBrush="#2563EB"
            Width="100"
            Margin="0,0,8,0"
            Click="Ok_Click"
            IsDefault="True"/>

                    <!-- Скасувати справа -->
                    <Button Content="Скасувати"
            Width="100"
            Height="25"
            Click="Cancel_Click"
            IsCancel="True"/>
                </StackPanel>

                
            </Grid>
        </Border>
    </Grid>
</Window>
