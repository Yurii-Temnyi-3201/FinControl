<Window x:Class="MyFinControl.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Налаштування пароля"
        Height="320"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFF3F4F6">

    <Grid Margin="15">

        <!-- Центральна картка -->
        <Border CornerRadius="12"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                Padding="16">

            <Grid>
                <Grid.RowDefinitions>
                    <!-- Заголовок -->
                    <RowDefinition Height="Auto"/>
                    <!-- Поля -->
                    <RowDefinition Height="Auto"/>
                    <!-- Фіксоване місце під помилку -->
                    <RowDefinition Height="32"/>
                    <!-- Кнопки -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок картки -->
                <TextBlock Grid.Row="0"
                           Text="Зміна пароля"
                           FontFamily="Segoe UI"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#111827"
                           Margin="0,0,0,10"/>

                <!-- Поля -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Поточний пароль -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Поточний пароль:"
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Foreground="#4B5563"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <PasswordBox x:Name="OldPasswordBox"
                                 Grid.Row="0" Grid.Column="1"
                                 Height="28"
                                 Padding="6,2"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"/>

                    <!-- Новий пароль -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Новий пароль:"
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Foreground="#4B5563"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <PasswordBox x:Name="NewPasswordBox"
                                 Grid.Row="2" Grid.Column="1"
                                 Height="28"
                                 Padding="6,2"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"/>

                    <!-- Підтвердження -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="Підтвердіть новий пароль:"
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Foreground="#4B5563"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 Grid.Row="4" Grid.Column="1"
                                 Height="28"
                                 Padding="6,2"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"/>
                </Grid>

                <!-- Повідомлення про помилку -->
                <TextBlock x:Name="ErrorText"
                           Grid.Row="2"
                           FontFamily="Segoe UI"
                           FontSize="11"
                           Foreground="#B91C1C"
                           Visibility="Collapsed"
                           TextWrapping="Wrap"
                           Margin="0,0,0,4"/>

                <!-- Кнопки -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                    <Button Content="Закрити"
                            Width="90"
                            Height="30"
                            Margin="0,0,8,0"
                            Click="CancelButton_Click"/>
                    <Button Content="Зберегти"
                            Width="90"
                            Height="30"
                            Background="#2563EB"
                            Foreground="White"
                            BorderBrush="#2563EB"
                            Click="SaveButton_Click"/>
                </StackPanel>

            </Grid>

        </Border>
    </Grid>
</Window>
